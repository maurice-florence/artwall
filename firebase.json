{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null"
  },
  "rules_version": "2",
  "service": "firebase.storage",
  "match": {
    "/b/{bucket}/o": {
      "match": "/{allPaths=**}",
      "allow": {
        "read": "request.auth != null",
        "write": "request.auth != null"
      }
    }
  },
  "extensions": {
    "storage-resize-images": {
      "sizes": [
        {
          "name": "thumbnail",
          "width": 200,
          "height": 200,
          "quality": 90
        },
        {
          "name": "card",
          "width": 400,
          "height": 400,
          "quality": 90
        },
        {
          "name": "full",
          "width": 1200,
          "height": 1200,
          "quality": 90
        }
      ],
      "deleteOriginalFile": false,
      "imageFormats": ["JPEG", "PNG", "WEBP"]
    }
  }
}
